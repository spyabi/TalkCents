<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/analytics_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C8DDFF"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="16dp">

    <!-- Vertical container for text -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="top|start">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TalkCents Analytics"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/analytics_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spent today: --"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/analytics_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monthly expenditure: --"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/analytics_budget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Budget Left: --"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/icon_cancel_button"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/icon_cancel"
        android:background="@android:color/transparent"
        android:contentDescription="Cancel Button"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:padding="0dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp" />
</FrameLayout>
